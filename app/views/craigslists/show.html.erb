
<h1>Craigslist</h1>
<%= form_tag @craigslist, :url => craigslists_path, :method => :get do %>
    <%= text_field_tag :search, params[:search], :id => 'search_field' %>
    <%= submit_tag "Search", :name => nil, class: "btn btn-info" %> 
    <%= link_to "Clear", craigslists_path %>
<% end %> 

<%= link_to "See your ads ^__^", craigslists_path(params.merge(format: "csv")) %>
