<div class = "container">
  <div class = "col-md-4"></div>
  <div class = "col-md-4">

    <h1>Log In</h1>          
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {'data-parsley-validate' => ''}) do |f| %>
      <%= devise_error_messages! %>
     
      <%= f.label :email  %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true, 'data-parsley-trigger' => 
              'blur' %>  

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", autocomplete: "off", required: true, 'data-parsley-trigger' => 
              'blur' %>

      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", required: true, 'data-parsley-trigger' => 
              'blur' %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>

      <%= f.submit "Log In", class: "btn btn-default" %>
    <% end %>
    <%= render "devise/shared/links" %>

    <div class = "clear"></div>
  </div>
      <div class = "col-md-4"></div>
</div>



